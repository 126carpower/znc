#!/bin/sh

CXXFLAGS="@CXXFLAGS@"
INCLUDES="-I@prefix@/include/znc @INCLUDES@"
LIBS="@LIBS@"
VERSION="@VERSION@"

if test -z "$1"; then
	echo "USAGE: $0 <--cflags|--include|--libs|--version>"
	echo "	--cflags     [$CXXFLAGS]"
	echo "	--include    [$INCLUDES]"
	echo "	--libs       [$LIBS]"
	echo "	--version    [$VERSION]"
	echo "	--prefix     [@prefix@]"
	exit 1
fi

case $1 in
	--cflags)
		echo $CXXFLAGS;;
	--include)
		echo $INCLUDES;;
	--libs)
		echo $LIBS;;
	--version)
		echo $VERSION;;
	--prefix)
		echo "@prefix@";;
esac

exit 0

