#!/bin/sh

prefix="@prefix@"
exec_prefix="@exec_prefix@"
datadir="@datadir@"
datarootdir="@datarootdir@"

CXXFLAGS="@MODFLAGS@"
INCLUDES="-I@prefix@/include/znc @INCLUDES@"
LIBS="@LIBS@"
MODDIR="@MODDIR@"
DATADIR="@DATADIR@"
VERSION="@VERSION@"

if test -z "$1"; then
	echo "USAGE: $0 <--cflags|--include|--libs|--moddir|--datadir|--version|--prefix>"
	echo "	--cflags     [$CXXFLAGS]"
	echo "	--include    [$INCLUDES]"
	echo "	--libs       [$LIBS]"
	echo "	--moddir     [$MODDIR]"
	echo "	--datadir    [$DATADIR]"
	echo "	--version    [$VERSION]"
	echo "	--prefix     [$prefix]"
	exit 1
fi

case $1 in
	--cflags)
		echo $CXXFLAGS;;
	--include)
		echo $INCLUDES;;
	--libs)
		echo $LIBS;;
	--moddir)
		echo $MODDIR;;
	--datadir)
		echo $DATADIR;;
	--version)
		echo $VERSION;;
	--prefix)
		echo $prefix;;
esac

exit 0

