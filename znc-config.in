#!/bin/sh

CXXFLAGS="@CXXFLAGS@"
INCLUDES="-I@prefix@/include/znc @INCLUDES@"
LIBS="@LIBS@"
VERSION="@VERSION@"

if test -z "$1"; then
	echo "USAGE: $0 <--cflags|--include|--libs|--version>"
	echo "	--cflags     [$CXXFLAGS]"
	echo "	--includes   [$INCLUDES]"
	echo "	--libs       [$LIBS]"
	echo "	--version    [$VERSION]"
	exit 1
fi

case $1 in
	--cflags)
		echo $CXXFLAGS;;
	--include)
		echo $INCLUDES;;
	--libs)
		echo $LIBS;;
	--version)
		echo $VERSION;;
esac

exit 0

